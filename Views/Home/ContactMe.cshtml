@model Blog.Models.EmailFormViewModel
@{
    ViewBag.Title = "Contact";
}
<script src="https://www.google.com/recaptcha/api.js?hl=fa"></script>
<div class="uk-grid" data-uk-grid-margin="">

    <div class="uk-width-medium-2-3">
        @Html.MvcSiteMap().SiteMapPath()
        <div class="uk-panel uk-panel-header">

            @using (Html.BeginForm("ContactMe", "Home", FormMethod.Post, new { @class = "uk-form uk-form-stacked" }))
            {
                @Html.AntiForgeryToken()
                <form class="uk-form uk-form-stacked">

                    <div class="uk-form-row">
                        @Html.LabelFor(m => m.FromName, new { @class = "uk-form-label" })
                        <div class="uk-form-controls">
                            @Html.TextBoxFor(m => m.FromName, new { @class = "uk-width-1-1" })
                            @Html.ValidationMessageFor(m => m.FromName)
                        </div>
                    </div>

                    <div class="uk-form-row">
                        @Html.LabelFor(m => m.FromEmail, new { @class = "uk-form-label" })
                        <div class="uk-form-controls">
                            @Html.TextBoxFor(m => m.FromEmail, new { @class = "uk-width-1-1" })
                            @Html.ValidationMessageFor(m => m.FromEmail)
                        </div>
                    </div>


                    <div class="uk-form-row">
                        @Html.LabelFor(m => m.Message, new { @class = "uk-form-label" })
                        <div class="uk-form-controls">
                            @Html.TextAreaFor(m => m.Message, new { @class = "uk-width-1-1", cols = "100", rows = "9" })
                            @Html.ValidationMessageFor(m => m.Message)
                        </div>
                    </div>
                    @ViewBag.Recaptcha

                    @if (ViewBag.RecaptchaLastErros != null)
                    {
                        <div>Oops! Invalid reCAPTCHA =(</div>
                   } 
                    <div class="uk-form-row">
                        <div class="uk-form-controls">
                            <button class="uk-button uk-button-primary">ارسال</button>
                        </div>
                    </div>

                </form>
            }
        </div>
    </div>

    <div class="uk-width-medium-1-3">
        <div class="uk-panel uk-panel-box">
            <h3 class="uk-panel-title"><i class="uk-icon-user uk-margin-small-right"></i>اطلاعات تماس</h3>
            <p class="uk-text-center">
                <br />
                <br />
                <b>smaeily</b> <i class="uk-icon-at uk-margin-small"></i> gmail.com<br>
                <b>me</b> <i class="uk-icon-at uk-margin-small"></i> SaeedEsmaeili.ir<br>
                <br />
                <br />
            </p>
            <h3 class="uk-h4 uk-text-center">من در شبکه های اجتماعی</h3>
            <ul class="uk-subnav uk-subnav-line uk-flex-center ">
                <li><a href="http://github.com/saeedesmaeili" target="_blank" class=" uk-icon-github uk-icon-medium"></a></li>
                <li><a href="http://twitter.com/smaeily" target="_blank" class=" uk-icon-twitter uk-icon-medium"></a></li>
                <li><a href="http://www.facebook.com/Saeed.Esmaeili" target="_blank" class=" uk-icon-facebook-official uk-icon-medium"></a></li>
                <li><a href="https://ir.linkedin.com/pub/saeed-esmaeili/89/81a/1a3" target="_blank" class=" uk-icon-linkedin-square uk-icon-medium"></a></li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}