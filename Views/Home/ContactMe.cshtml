@model Blog.Models.EmailFormViewModel
@{
    ViewBag.Title = "Contact";
}
@Html.MvcSiteMap().SiteMapPath()
<div class="uk-grid" data-uk-grid-margin="">
    <div class="uk-width-1-1 ">
            <ul class="tm-social-icons uk-text-center">
                <li  class=""><a href="http://github.com/saeedesmaeili" target="_blank"><span class="uk-icon-github" ></span></a></li>
                <li  class=""><a href="http://twitter.com/smaeily" target="_blank"><span class="uk-icon-twitter" ></span></a></li>
                <li  class=""><a href="http://www.facebook.com/Saeed.Esmaeili" target="_blank"><span class="uk-icon-facebook-official" ></span></a></li>
                <li  class=""><a href="https://ir.linkedin.com/pub/saeed-esmaeili/89/81a/1a3" target="_blank"><span class="uk-icon-linkedin-square" ></span></a></li>
            </ul>
    </div>
    <div class="uk-width-1-1">
        <div class="uk-panel uk-panel-header">

            @using (Html.BeginForm("ContactMe", "Home", FormMethod.Post, new { @class = "uk-form uk-form-stacked" }))
            {
                @Html.AntiForgeryToken()
                <form class="uk-form uk-form-stacked">

                    <div class="uk-form-row">
                        @Html.LabelFor(m => m.FromName, new { @class = "uk-form-label" })
                        <div class="uk-form-controls">
                            @Html.TextBoxFor(m => m.FromName, new { @class = "uk-width-1-1" })
                            @Html.ValidationMessageFor(m => m.FromName)
                        </div>
                    </div>

                    <div class="uk-form-row">
                        @Html.LabelFor(m => m.FromEmail, new { @class = "uk-form-label" })
                        <div class="uk-form-controls">
                            @Html.TextBoxFor(m => m.FromEmail, new { @class = "uk-width-1-1" })
                            @Html.ValidationMessageFor(m => m.FromEmail)
                        </div>
                    </div>


                    <div class="uk-form-row">
                        @Html.LabelFor(m => m.Message, new { @class = "uk-form-label" })
                        <div class="uk-form-controls">
                            @Html.TextAreaFor(m => m.Message, new { @class = "uk-width-1-1", cols = "100", rows = "9" })
                            @Html.ValidationMessageFor(m => m.Message)
                        </div>
                    </div>
                    @ViewBag.Recaptcha

                    @if (ViewBag.RecaptchaLastErros != null)
                    {
                        <div>Oops! Invalid reCAPTCHA =(</div>
                    }
                    <div class="uk-form-row">
                        <div class="uk-form-controls">
                            <button class="uk-button uk-button-primary">ارسال</button>
                        </div>
                    </div>

                </form>
            }
        </div>
    </div>

    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}