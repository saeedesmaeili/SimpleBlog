@using Blog.Models
@model LoginViewModel
<h1><i class="uk-icon-user-secret uk-margin-right"></i>ورود</h1>
<hr />

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "uk-panel uk-panel-box uk-form ", role = "form" }))
            {
    @Html.AntiForgeryToken()
    @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@

    <div class="uk-form-row">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "uk-width-1-1 uk-form-large" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="uk-form-row">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "uk-width-1-1 uk-form-large" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="uk-form-row">
        <input type="submit" class="uk-width-1-1 uk-button uk-button-primary uk-button-large" value="ورود" />
    </div>

    <div class="uk-form-row uk-text-small">
        @Html.LabelFor(m => m.RememberMe, new { @class = "uk-float-left" })
        @Html.CheckBoxFor(m => m.RememberMe)
        <a class="uk-float-right uk-link uk-link-muted" href="#">Forgot Password?</a>
    </div>



    @*<p>
            @Html.ActionLink("Register as a new user", "Register")
        </p>*@
    @* Enable this once you have account confirmation enabled for password reset functionality
        <p>
            @Html.ActionLink("Forgot your password?", "ForgotPassword")
        </p>*@
}
