@using Blog.Models
@model LoginViewModel

@{
    ViewBag.Title = "ورود";
}
<h1><i class="uk-icon-user-secret uk-margin-right"></i>ورود</h1>
<hr />
<div class="uk-width-1-1">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "uk-panel uk-panel-box uk-form  uk-width-1-1 uk-width-medium-1-2", role = "form" }))
            {
        @Html.AntiForgeryToken()
        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@

        <div class="uk-form-row">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "uk-width-1-1 uk-form-large" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="uk-form-row">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "uk-width-1-1 uk-form-large" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="uk-form-row">
            <button type="submit" class="uk-width-1-1 uk-button uk-button-primary uk-button-large" >ورود</button>
        </div>

        <div class="uk-form-row uk-text-small">
            @Html.LabelFor(m => m.RememberMe, new { @class = "uk-float-left" })
            @Html.CheckBoxFor(m => m.RememberMe)
            <a class="uk-float-right uk-link uk-link-muted" href="#">Forgot Password?</a>
        </div>
    }
</div>

