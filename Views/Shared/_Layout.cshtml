<!DOCTYPE html>
<html lang="fa-IR" dir="rtl">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - سعید اسماعیلی</title>

    <link rel="apple-touch-icon" sizes="57x57" href="@Url.Content("~/apple-touch-icon-57x57.png")">
    <link rel="apple-touch-icon" sizes="60x60" href="@Url.Content("~/apple-touch-icon-60x60.png")">
    <link rel="apple-touch-icon" sizes="72x72" href="@Url.Content("~/apple-touch-icon-72x72.png")">
    <link rel="apple-touch-icon" sizes="76x76" href="@Url.Content("~/apple-touch-icon-76x76.png")">
    <link rel="apple-touch-icon" sizes="114x114" href="@Url.Content("~/apple-touch-icon-114x114.png")">
    <link rel="apple-touch-icon" sizes="120x120" href="@Url.Content("~/apple-touch-icon-120x120.png")">
    <link rel="apple-touch-icon" sizes="144x144" href="@Url.Content("~/apple-touch-icon-144x144.png")">
    <link rel="apple-touch-icon" sizes="152x152" href="@Url.Content("~/apple-touch-icon-152x152.png")">
    <link rel="apple-touch-icon" sizes="180x180" href="@Url.Content("~/apple-touch-icon-180x180.png")">
    <link rel="icon" type="image/png" href="@Url.Content("~/favicon-32x32.png")" sizes="32x32">
    <link rel="icon" type="image/png" href="@Url.Content("~/favicon-194x194.png")" sizes="194x194">
    <link rel="icon" type="image/png" href="@Url.Content("~/favicon-96x96.png")" sizes="96x96">
    <link rel="icon" type="image/png" href="@Url.Content("~/android-chrome-192x192.png")" sizes="192x192">
    <link rel="icon" type="image/png" href="@Url.Content("~/favicon-16x16.png")")" sizes="16x16">
    <link rel="manifest" href="@Url.Content("~/manifest.json")">
    <meta name="apple-mobile-web-app-title" content="Saeed Esmaeili Weblog">
    <meta name="application-name" content="Saeed Esmaeili Weblog">
    <meta name="msapplication-TileColor" content="#00aba9">
    <meta name="msapplication-TileImage" content="@Url.Content("~/mstile-144x144.png")">
    <meta name="theme-color" content="#ffffff">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="tm-background">


    <nav class="tm-navbar uk-navbar " data-uk-sticky="{ media: '(min-width: 640px) '}">
        <div class="uk-container uk-container-center">
            <a class="uk-navbar-brand uk-hidden-small" href="@Url.Action("Index","Home")">
                <img class="uk-margin uk-margin-remove uk-responsive-height" src="@Url.Content("~/Images/logo.png")" title="سعید اسماعیلی - Saeed Esmaeili" alt="سعید اسماعیلی - Saeed Esmaeili">
            </a>
            <ul class="uk-navbar-nav uk-hidden-small">
                @Html.MvcSiteMap().Menu()
            </ul>
            <a href="#offcanvas" class="uk-navbar-toggle uk-visible-small" data-uk-offcanvas></a>
            <div class="uk-navbar-brand uk-navbar-center uk-visible-small">
                <img class="uk-responsive-height" src="@Url.Content("~/Images/logo.png")" />
            </div>
        </div>
    </nav>

    @*@Html.Partial("_LoginPartial")*@
    <div class="tm-middle">
        <div class="uk-container uk-container-center">
            @Html.MvcSiteMap().SiteMapPath()
            @RenderBody()
        </div>
    </div>
    <div class="tm-footer">
        <div class="uk-container uk-container-center uk-text-center">

            <ul class="uk-subnav uk-subnav-line uk-flex-center">
                <li><a href="http://github.com/SaeedEsmaeili">GitHub</a></li>
                <li><a href="http://github.com/SaeedEsmaeili/SimpleBlog/issues">Email</a></li>
                <li><a href="http://github.com/uikit/uikit/blob/master/CHANGELOG.md">FaceBook</a></li>
                <li><a href="https://twitter.com/SaeedEsmaeili">Twitter</a></li>
            </ul>

            <div class="uk-panel">
                <p>Made by <a href="http://www.yootheme.com">YOOtheme</a> with love and caffeine.<br>Licensed under <a href="http://opensource.org/licenses/MIT">MIT license</a>.</p>
                <a href="../index.html"><img src="images/logo_uikit.svg" width="90" height="30" title="UIkit" alt="UIkit"></a>
            </div>

        </div>
    </div>


    <div id="offcanvas" class="uk-offcanvas">
        <div class="uk-offcanvas-bar">
            <ul class="uk-nav uk-nav-offcanvas">
                <li class="uk-active">
                    <a href="@Url.Action("Index","Home")"><i class="uk-icon-home"></i></a>
                </li>
                <li>
                    <a href="@Url.Action("AboutMe","Home")">درباره من</a>
                </li>
                <li>
                    <a href="@Url.Action("Index","BlogPosts")">وبلاگ</a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Works")">نمونه کارها</a>
                </li>
                <li>
                    <a href="@Url.Action("ContactMe","Home")">تماس با من</a>
                </li>
                <li>
                    <a href="@Url.Action("Login","Account")">ورود</a>
                </li>
            </ul>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/uikit")
    @RenderSection("scripts", required: false)
    <script>
        $.scrollSpeed(100, 800);
    </script>
</body>
</html>