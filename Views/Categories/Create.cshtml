@model Blog.Models.Category

@{
    ViewBag.Title = "Create";
}

<h1><i class="uk-icon-plus-square uk-margin-right"></i>افزودن شاخه جدید</h1>

@using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { @class = "uk-form uk-form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="uk-form-row">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="uk-form-row">
            @Html.LabelFor(model => model.IconClass, htmlAttributes: new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.EditorFor(model => model.IconClass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IconClass, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="uk-form-row">
            @Html.LabelFor(model => model.Order, htmlAttributes: new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.EditorFor(model => model.Order, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Order, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="uk-form-row">
            @Html.LabelFor(model => model.ParentId, htmlAttributes: new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.DropDownList("ParentId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="uk-form-row">
            <div class="uk-form-controls">
                <button type="submit" class="uk-button uk-button-success"><i class="uk-icon-save uk-margin-small-right"></i>ذخیره</button>
                <a class="uk-button uk-button-danger" href="@Request.UrlReferrer"><i class="uk-icon-mail-reply uk-margin-small-right"></i>بازگشت</a>
            </div>
        </div>
    </div>
}

<div>
    
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}